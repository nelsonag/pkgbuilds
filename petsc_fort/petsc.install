post_install() {

# set the PETSC_DIR
source /etc/profile.d/petsc.sh
export PETSC_DIR=${PETSC_DIR}

#noVersion=${1%%-[1-9]}
#rootDir=${noVersion/_/-}

cat << EOF

If you just ran makepkg in this directory then
to test the PETSc installation you can run:

$ cd src/petsc-3.4.3/; make PETSC_DIR=$PETSC_DIR test

EOF
}

